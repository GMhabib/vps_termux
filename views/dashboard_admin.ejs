<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        body { background-color: #f8f9fa; }
        .table-responsive { max-height: 60vh; }
        .action-buttons form { display: inline-block; margin: 0 2px; }
        .btn-sm { padding: 0.2rem 0.5rem; font-size: 0.8rem; }
        .path-display {
            background-color: #e9ecef;
            padding: 0.5rem 1rem;
            border-radius: 0.25rem;
            margin-bottom: 1rem;
            word-break: break-all;
        }

        /* --- CSS BARU UNTUK ANIMASI --- */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .container, .card {
            animation: fadeIn 0.5s ease-in-out;
        }
        .table-hover tbody tr {
            transition: all 0.2s ease-in-out;
        }
        .table-hover tbody tr:hover {
            transform: translateY(-3px);
            box-shadow: 0 4px 10px rgba(0,0,0,0.08);
            cursor: pointer;
        }
        .btn {
            transition: all 0.2s ease-in-out;
        }
        .btn:hover {
            transform: scale(1.05);
        }
        /* --- AKHIR CSS BARU --- */

        /* CSS untuk Terminal ditambahkan agar lebih rapi */
        #terminal {
            background-color: #212529;
            color: #f8f9fa;
            padding: 15px;
            border-radius: 5px;
            font-family: 'Courier New', Courier, monospace;
            height: 400px;
            overflow-y: scroll;
            white-space: pre-wrap;
            word-wrap: break-word;
        }
        #terminal-input-container {
            display: flex;
            background-color: #212529;
            padding: 5px 15px 10px;
            border-radius: 5px;
        }
        #terminal-input {
            flex-grow: 1;
            background-color: transparent;
            border: none;
            color: #f8f9fa;
            outline: none;
        }
        #terminal-prompt {
            color: #28a745;
            margin-right: 10px;
        }
        /* --- CSS BARU UNTUK KURSOR TERMINAL --- */
        #terminal-prompt .cursor {
            display: inline-block;
            background-color: #f8f9fa;
            width: 10px;
            animation: blink 1s step-end infinite;
        }
        @keyframes blink {
            from, to { background-color: transparent; }
            50% { background-color: #f8f9fa; }
        }
        /* --- AKHIR CSS BARU --- */

        /* --- CSS BARU UNTUK NOTIFIKASI --- */
        #notification {
            position: fixed;
            bottom: 20px;
            right: 20px;
            padding: 15px 25px;
            border-radius: 8px;
            color: white;
            z-index: 9999;
            opacity: 0;
            visibility: hidden;
            transform: translateY(20px);
            transition: all 0.4s ease-in-out;
        }
        #notification.show {
            opacity: 1;
            visibility: visible;
            transform: translateY(0);
        }
        #notification.success { background-color: #198754; }
        #notification.error { background-color: #dc3545; }
        /* --- AKHIR CSS BARU --- */
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/dashboard">Admin Panel</a>
            <div class="d-flex text-white">
                <span class="navbar-text me-3">
                    Selamat Datang, <strong><%= user.username %></strong> (<%= user.role %>)
                </span>
                <a href="/logout" class="btn btn-outline-danger">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-folder-open"></i> File Manager</h3>
                    </div>
                    <div class="card-body">
                        <div class="mb-4">
                            <h5>Upload File Baru</h5>
                            <form action="/upload" method="POST" enctype="multipart/form-data" class="d-flex">
                                <input type="hidden" name="currentPath" value="<%= currentPath %>">
                                <input class="form-control me-2" type="file" name="filedata" required>
                                <button class="btn btn-primary" type="submit">Upload</button>
                            </form>
                        </div>
                        
                        <hr>

                        <h5>File & Folder</h5>
                        <div class="path-display">
                            <i class="fas fa-location-dot"></i> Lokasi: <strong>/<%= currentPath.replace(/\\/g, '/') %></strong>
                            <input type="hidden" form="batch-form" name="currentPath" value="<%= currentPath %>">
                        </div>
                        <div class="mb-2">
                             <button type="button" id="compress-btn" class="btn btn-secondary btn-sm"><i class="fas fa-file-zipper"></i> Kompres Pilihan</button>
                             <button type="button" id="delete-batch-btn" class="btn btn-danger btn-sm"><i class="fas fa-trash-can"></i> Hapus Pilihan</button>
                        </div>

                        <form id="batch-form" method="POST">
                            <div class="table-responsive">
                                <table class="table table-hover table-sm">
                                    <thead>
                                        <tr>
                                            <th><input type="checkbox" id="select-all"></th>
                                            <th>Nama</th>
                                            <th>Ukuran</th>
                                            <th>Aksi</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% files.forEach(file => { %>
                                            <tr class="text-nowrap">
                                                <td>
                                                    <% if (file.name !== '.. (Kembali)') { %>
                                                        <input type="checkbox" name="items" class="file-checkbox" value="<%= file.path %>">
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <% if (file.isDirectory) { %>
                                                        <i class="fas fa-folder text-warning"></i>
                                                        <a href="/dashboard?path=<%= encodeURIComponent(file.path) %>" class="text-decoration-none"><%= file.name %></a>
                                                    <% } else { %>
                                                        <i class="fas fa-file text-secondary"></i> <%= file.name %>
                                                    <% } %>
                                                </td>
                                                <td><%= file.size %></td>
                                                <td class="action-buttons">
                                                    <% if (!file.isDirectory) { %>
                                                        <a href="/download/<%= encodeURIComponent(file.path) %>" class="btn btn-success btn-sm" title="Download"><i class="fas fa-download"></i></a>
                                                        <% if (user.role === 'admin') { %>
                                                            <button type="button" class="btn btn-info btn-sm edit-btn" data-path="<%= file.path %>" title="Edit"><i class="fas fa-edit"></i></button>
                                                        <% } %>
                                                        <% if (/\.(zip|tar|tar\.gz|tgz)$/i.test(file.name)) { %>
                                                            <form action="/extract/<%= encodeURIComponent(file.path) %>" method="POST">
                                                                <button type="submit" class="btn btn-warning btn-sm" title="Ekstrak"><i class="fas fa-box-open"></i></button>
                                                            </form>
                                                        <% } %>
                                                    <% } %>
                                                     <% if (file.name !== '.. (Kembali)' && user.role === 'admin') { %>
                                                        <form action="/admin/delete/<%= encodeURIComponent(file.path) %>" method="POST" onsubmit="return confirm('Anda yakin ingin menghapus <%= file.name %>?');">
                                                            <button type="submit" class="btn btn-danger btn-sm" title="Hapus"><i class="fas fa-trash"></i></button>
                                                        </form>
                                                     <% } %>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-users"></i> User Management</h3>
                    </div>
                    <div class="card-body">
   <div class="mb-3">
                            <button type="button" id="delete-all-users-btn" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-user-slash"></i> Hapus Semua User
                            </button>
                            <p class="small text-muted mt-2">Ini akan menghapus semua user **kecuali** Anda sendiri.</p>
                        </div>                     
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Username</th>
                                        <th>Role</th>
                                        <th>Aksi</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% users.forEach(u => { %>
                                        <tr>
                                            <td><%= u.username %></td>
                                            <td><span class="badge bg-<%= u.role === 'admin' ? 'success' : 'secondary' %>"><%= u.role %></span></td>
                                            <td>
                                                <% if (user.role === 'admin') { %>
                                                    <form action="/delete-user/<%= u._id %>" method="POST" onsubmit="return confirm('Yakin ingin menghapus user <%= u.username %>?');">
                                                        <button type="submit" class="btn btn-danger btn-sm" 
                                                            <%= user._id.toString() === u._id.toString() ? 'disabled' : '' %>>
                                                            Hapus
                                                        </button>
                                                    </form>
                                                <% } %>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div> 
        <% if (user.role === 'admin') { %>
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-terminal"></i> Web Shell</h3>
                    </div>
                    <div class="card-body p-0">
                        <div id="terminal">
                            <span>Selamat datang di Web Shell. Jalankan perintah di server.</span><br>
                            <span>Contoh: ls -la, pwd, node -v</span>
                        </div>
                        <form id="terminal-form">
                            <div id="terminal-input-container">
                                <span id="terminal-prompt">$> <!--<span class="cursor">&nbsp;</span> --></span>
                                <input type="text" id="terminal-input" autocomplete="off" autofocus>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
    </div> 
    
    <div class="modal fade" id="editFileModal" tabindex="-1" aria-labelledby="editFileModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <form id="edit-form" method="POST">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editFileModalLabel">Edit File: <span id="filename-span"></span></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <textarea name="fileContent" id="fileContent" class="form-control" rows="20"></textarea>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Tutup</button>
                        <button type="submit" class="btn btn-primary">Simpan Perubahan</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div id="notification"></div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {

            // --- FUNGSI BARU UNTUK NOTIFIKASI ---
            const notification = document.getElementById('notification');
            function showNotification(message, type = 'success') {
                notification.textContent = message;
                notification.className = ''; // Reset classes
                notification.classList.add('show', type);
                setTimeout(() => {
                    notification.classList.remove('show');
                }, 3000); // Sembunyikan setelah 3 detik
            }

            const editModal = new bootstrap.Modal(document.getElementById('editFileModal'));
            
            document.querySelectorAll('.edit-btn').forEach(button => {
                button.addEventListener('click', async (e) => {
                    const filePath = e.currentTarget.dataset.path;
                    document.getElementById('filename-span').textContent = filePath.split(/[\\/]/).pop();
                    
                    const editForm = document.getElementById('edit-form');
                    editForm.action = `/admin/edit/${encodeURIComponent(filePath)}`;
                    
                    try {
                        const response = await fetch(`/admin/get-content/${encodeURIComponent(filePath)}`);
                        if (!response.ok) {
                            const errorText = await response.text();
                            const status = response.status;
                            try {
                                const errorJson = JSON.parse(errorText);
                                throw new Error(`Status ${status}: ${errorJson.message || errorText}`);
                            } catch {
                                throw new Error(`Status ${status}: Gagal memuat file. ${errorText.substring(0, 100)}...`);
                            }
                        }
                        const content = await response.text();
                        document.getElementById('fileContent').value = content;
                        editModal.show();
                    } catch (error) {
                        // GANTI alert() dengan notifikasi baru
                        showNotification(error.message, 'error');
                    }
                });
            });

            const selectAllCheckbox = document.getElementById('select-all');
            const fileCheckboxes = document.querySelectorAll('.file-checkbox');
            selectAllCheckbox.addEventListener('change', (e) => {
                fileCheckboxes.forEach(checkbox => {
                    checkbox.checked = e.target.checked;
                });
            });

            const batchForm = document.getElementById('batch-form');
            const userRole = "<%= user.role %>";

            if (userRole !== 'admin') {
                 document.getElementById('compress-btn').disabled = true;
                 document.getElementById('delete-batch-btn').disabled = true;
            }

            document.getElementById('compress-btn').addEventListener('click', () => {
                if (document.querySelectorAll('.file-checkbox:checked').length > 0) {
                    batchForm.action = '/admin/batch-archive';
                    batchForm.submit();
                } else {
                    // GANTI alert() dengan notifikasi baru
                    showNotification('Pilih setidaknya satu item untuk dikompres.', 'error');
                }
            });

            document.getElementById('delete-batch-btn').addEventListener('click', () => {
                 if (document.querySelectorAll('.file-checkbox:checked').length > 0) {
                    if (confirm('Anda yakin ingin menghapus item yang dipilih?')) {
                        batchForm.action = '/admin/batch-delete';
                        batchForm.submit();
                    }
                 } else {
                     // GANTI alert() dengan notifikasi baru
                     showNotification('Pilih setidaknya satu item untuk dihapus.', 'error');
                 }
            });

            // =======================================================
            // PEMBARUAN UTAMA: LOGIKA WEB SHELL DENGAN EFEK MENGETIK
            // =======================================================
            const terminalOutput = document.getElementById('terminal');
            const terminalForm = document.getElementById('terminal-form');
            const terminalInput = document.getElementById('terminal-input');
            const currentPathInput = document.querySelector('input[name="currentPath"]');

            // Fungsi baru untuk efek mengetik
            function typewriterEffect(element, text, callback) {
                let i = 0;
                const speed = 10; // Kecepatan ketik dalam milidetik

                function type() {
                    if (i < text.length) {
                        element.textContent += text.charAt(i);
                        i++;
                        terminalOutput.scrollTop = terminalOutput.scrollHeight; // Auto-scroll
                        setTimeout(type, speed);
                    } else if (callback) {
                        callback(); // Panggil callback jika sudah selesai
                    }
                }
                type();
            }

            if (terminalForm) {
                terminalForm.addEventListener('submit', async (e) => {
                    e.preventDefault();
                    const command = terminalInput.value.trim();
                    if (command === '') return;
                    
                    // Nonaktifkan input selama perintah dieksekusi
                    terminalInput.disabled = true; 

                    const commandEcho = document.createElement('div');
                    commandEcho.innerHTML = `<span style="color: #28a745;">$></span> ${command}`;
                    terminalOutput.appendChild(commandEcho);
                    
                    terminalInput.value = '';

                    try {
                        const response = await fetch('/admin/execute-command', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({
                                command: command,
                                currentPath: currentPathInput.value
                            })
                        });

                        const data = await response.json();
                        const outputElement = document.createElement('pre');
                        outputElement.style.margin = '0';
                        
                        if (!response.ok) {
                            outputElement.style.color = '#dc3545'; // Warna merah untuk error
                            const errorMessage = `Error ${response.status}: ${data.output || data.message || 'Unknown Server Error'}`;
                            // Ketik pesan error
                            typewriterEffect(outputElement, errorMessage, () => {
                                terminalInput.disabled = false; // Aktifkan lagi input
                                terminalInput.focus();
                            });
                        } else {
                            // Ketik output yang berhasil
                            typewriterEffect(outputElement, data.output, () => {
                                terminalInput.disabled = false; // Aktifkan lagi input
                                terminalInput.focus();
                            });
                        }
                        terminalOutput.appendChild(outputElement);

                    } catch (error) {
                        const errorElement = document.createElement('pre');
                        errorElement.style.color = '#dc3545';
                        const clientError = `Client/Network Error: ${error.message}`;
                        // Ketik pesan error
                        typewriterEffect(errorElement, clientError, () => {
                           terminalInput.disabled = false; // Aktifkan lagi input
                           terminalInput.focus();
                        });
                        terminalOutput.appendChild(errorElement);
                    }
                    
                    terminalOutput.scrollTop = terminalOutput.scrollHeight;
                });
            }
            // --- LOGIKA MANAJEMEN USER ---

document.getElementById('delete-all-users-btn').addEventListener('click', async () => {
    // KONFIRMASI KETAT DENGAN INPUT TEKS
    const confirmation = prompt("PERINGATAN! Anda akan menghapus SEMUA user (kecuali Anda sendiri).\n\nKetik 'HAPUS SEMUA' untuk melanjutkan:");

    if (confirmation !== 'HAPUS SEMUA') {
        if (confirmation !== null) {
            showNotification('Penghapusan dibatalkan. Konfirmasi tidak cocok.', 'info');
        }
        return;
    }

    try {
        const response = await fetch('/admin/delete-all-users', {
            method: 'POST',
            headers: { 'Accept': 'application/json' }
        });

        const result = await response.json();

        if (!response.ok) {
            throw new Error(result.message || 'Gagal menghapus semua user.');
        }

        // Tampilkan notifikasi sukses dan refresh halaman
        showNotification(result.message, 'success');
        
        // Tunda refresh agar notifikasi sempat terlihat
        setTimeout(() => {
            window.location.reload(); 
        }, 1500); 

    } catch (error) {
        showNotification(`Error: ${error.message}`, 'error');
    }
});

// Pastikan semua form delete user individu juga memiliki konfirmasi:
document.querySelectorAll('.delete-user-form').forEach(form => {
    form.addEventListener('submit', function(e) { 
        const userName = this.closest('tr').querySelector('td:first-child').textContent.trim();
        // Cek jika tombol disable (artinya user sendiri)
        if (this.querySelector('button[disabled]')) {
            e.preventDefault();
            return;
        }
        if (!confirm(`Yakin ingin menghapus user "${userName}"? Tindakan ini tidak dapat dibatalkan.`)) {
            e.preventDefault(); 
        }
    });
});

        });
    </script>
</body>
</html>
