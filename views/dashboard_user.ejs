<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        body { background-color: #f8f9fa; }
        .table-responsive { max-height: 70vh; }
        .action-buttons form { display: inline-block; margin: 0 2px; }
        .btn-sm { padding: 0.2rem 0.5rem; font-size: 0.8rem; }
        .path-display {
            background-color: #e9ecef;
            padding: 0.5rem 1rem;
            border-radius: 0.25rem;
            margin-bottom: 1rem;
            word-break: break-all;
        }

        /* --- CSS BARU UNTUK ANIMASI --- */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .container, .card {
            animation: fadeIn 0.5s ease-in-out;
        }
        .table-hover tbody tr {
            transition: all 0.2s ease-in-out;
        }
        .table-hover tbody tr:hover {
            transform: translateY(-3px);
            box-shadow: 0 4px 10px rgba(0,0,0,0.08);
            cursor: pointer;
        }
        .btn {
            transition: all 0.2s ease-in-out;
        }
        .btn:hover {
            transform: scale(1.05);
        }
        /* --- AKHIR CSS BARU --- */

        /* CSS untuk Terminal */
        #terminal {
            background-color: #212529;
            color: #f8f9fa;
            padding: 15px;
            border-radius: 5px;
            font-family: 'Courier New', Courier, monospace;
            height: 400px;
            overflow-y: scroll;
            white-space: pre-wrap;
            word-wrap: break-word;
        }
        #terminal-input-container {
            display: flex;
            background-color: #212529;
            padding: 5px 15px 10px;
            border-radius: 5px;
        }
        #terminal-input {
            flex-grow: 1;
            background-color: transparent;
            border: none;
            color: #f8f9fa;
            outline: none;
        }
        #terminal-prompt {
            color: #28a745;
            margin-right: 10px;
        }

        /* --- CSS BARU UNTUK KURSOR TERMINAL --- */
        #terminal-prompt .cursor {
            display: inline-block;
            background-color: #f8f9fa;
            width: 10px;
            animation: blink 1s step-end infinite;
        }
        @keyframes blink {
            from, to { background-color: transparent; }
            50% { background-color: #f8f9fa; }
        }
        /* --- AKHIR CSS BARU --- */

        /* --- CSS BARU UNTUK NOTIFIKASI --- */
        #notification {
            position: fixed;
            bottom: 20px;
            right: 20px;
            padding: 15px 25px;
            border-radius: 8px;
            color: white;
            z-index: 9999;
            opacity: 0;
            visibility: hidden;
            transform: translateY(20px);
            transition: all 0.4s ease-in-out;
        }
        #notification.show {
            opacity: 1;
            visibility: visible;
            transform: translateY(0);
        }
        #notification.success { background-color: #198754; }
        #notification.error { background-color: #dc3545; }
        #notification.warning { background-color: #ffc107; color: #000; }
        /* --- AKHIR CSS BARU --- */
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/dashboard">My Files</a>
            <div class="d-flex text-white">
                <span class="navbar-text me-3">
                    Selamat Datang, <strong><%= user.username %></strong>
                </span>
                <a href="/logout" class="btn btn-outline-light">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-folder-open"></i> File Manager</h3>
                    </div>
                    <div class="card-body">
                        <div class="mb-4">
                            <h5>Upload File Baru</h5>
                            <form action="/upload" method="POST" enctype="multipart/form-data" class="d-flex">
                                <input type="hidden" name="currentPath" value="<%= currentPath %>">
                                <input class="form-control me-2" type="file" name="filedata" required>
                                <button class="btn btn-primary" type="submit">Upload</button>
                            </form>
                        </div>
                        
                        <hr>

                        <h5>File & Folder Anda</h5>
                        <div class="path-display">
                            <i class="fas fa-location-dot"></i> Lokasi: <strong>/<%= currentPath.replace(/\\/g, '/') %></strong>
                        </div>
                        <p class="form-text"><i class="fas fa-info-circle"></i> <strong>Cara Menjalankan File:</strong> `bash nama_file.sh` atau `node nama_file.js`</p>       
                        <div class="table-responsive">
                            <table class="table table-hover table-sm">
                                <thead>
                                    <tr>
                                        <th>Nama</th>
                                        <th>Ukuran</th>
                                        <th>Aksi</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% files.forEach(file => { %>
                                        <tr class="text-nowrap">
                                            <td>
                                                <% if (file.isDirectory) { %>
                                                    <i class="fas fa-folder text-warning"></i>
                                                    <a href="/dashboard?path=<%= encodeURIComponent(file.path) %>" class="text-decoration-none"><%= file.name %></a>
                                                <% } else { %>
                                                    <i class="fas fa-file text-secondary"></i> <%= file.name %>
                                                <% } %>
                                            </td>
                                            <td><%= file.size %></td>
                                            <td class="action-buttons">
                                                <% if (!file.isDirectory) { %>
                                                    <a href="/download/<%= encodeURIComponent(file.path) %>" class="btn btn-success btn-sm" title="Download"><i class="fas fa-download"></i> Download</a>
                                                    
                                                    <% if (/\.(zip|tar|tar\.gz|tgz)$/i.test(file.name)) { %>
                                                        <form action="/extract/<%= encodeURIComponent(file.path) %>" method="POST" onsubmit="return confirm('Yakin ingin mengekstrak <%= file.name %>?');">
                                                            <button type="submit" class="btn btn-warning btn-sm" title="Ekstrak"><i class="fas fa-box-open"></i> Ekstrak</button>
                                                        </form>
                                                    <% } %>
                                                <% } %>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-4 justify-content-center">
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-terminal"></i> Web Shell</h3>
                    </div>
                    <div class="card-body p-0">
                        <div id="terminal">
                            <span>Selamat datang di Web Shell. Perintah berbahaya diblokir.</span><br>
                            <span>Lokasi kerja: <strong><%= currentPath.replace(/\\/g, '/') %></strong></span>
                        </div>
                        <form id="terminal-form">
                            <div id="terminal-input-container">
                                <span id="terminal-prompt">$> <!-- <span class="cursor">&nbsp;</span>--></span>
                                <input type="text" id="terminal-input" autocomplete="off" autofocus>
                                <input type="hidden" id="shell-current-path" value="<%= currentPath %>">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>        
    </div>
    
    <div class="modal fade" id="editFileModal" tabindex="-1" aria-labelledby="editFileModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <form id="edit-form" method="POST">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editFileModalLabel">Edit File: <span id="filename-span"></span></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="currentPath" value="<%= currentPath %>"> 
                        <textarea name="fileContent" id="fileContent" class="form-control" rows="20"></textarea>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Tutup</button>
                        <button type="submit" class="btn btn-primary">Simpan Perubahan</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div id="notification"></div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {

            // --- FUNGSI BARU UNTUK NOTIFIKASI ---
            const notification = document.getElementById('notification');
            function showNotification(message, type = 'success') {
                notification.textContent = message;
                notification.className = ''; // Reset classes
                notification.classList.add('show', type);
                setTimeout(() => {
                    notification.classList.remove('show');
                }, 3000); // Sembunyikan setelah 3 detik
            }

            const editModal = new bootstrap.Modal(document.getElementById('editFileModal'));
            
            // Logika tombol Edit (meskipun di-disable di HTML, JS-nya kita perbarui)
            document.querySelectorAll('.edit-btn').forEach(button => {
                button.addEventListener('click', async (e) => {
                    const filePath = e.currentTarget.dataset.path;
                    document.getElementById('filename-span').textContent = filePath.split(/[\\/]/).pop();
                    
                    const editForm = document.getElementById('edit-form');
                    editForm.action = `/user/edit/${encodeURIComponent(filePath)}`; 
                    
                    try {
                        const response = await fetch(`/user/get-content/${encodeURIComponent(filePath)}`);
                        if (!response.ok) {
                            const errorText = await response.text();
                            throw new Error(`Gagal memuat file: ${errorText}`);
                        }
                        const content = await response.text();
                        document.getElementById('fileContent').value = content;
                        editModal.show();
                    } catch (error) {
                         // GANTI alert() dengan notifikasi baru
                        showNotification(error.message, 'error');
                    }
                });
            });
            
            // =======================================================
            // PEMBARUAN UTAMA: LOGIKA WEB SHELL DENGAN EFEK MENGETIK
            // =======================================================
            const terminalOutput = document.getElementById('terminal');
            const terminalForm = document.getElementById('terminal-form');
            const terminalInput = document.getElementById('terminal-input');
            const shellCurrentPathInput = document.getElementById('shell-current-path');

            // Fungsi baru untuk efek mengetik
            function typewriterEffect(element, text, callback) {
                let i = 0;
                const speed = 10; // Kecepatan ketik dalam milidetik

                function type() {
                    if (i < text.length) {
                        element.textContent += text.charAt(i);
                        i++;
                        terminalOutput.scrollTop = terminalOutput.scrollHeight; // Auto-scroll
                        setTimeout(type, speed);
                    } else if (callback) {
                        callback(); // Panggil callback jika sudah selesai
                    }
                }
                type();
            }

            function isCommandDangerous(command) {
                const lowerCommand = command.toLowerCase().trim();
                if (/\b(rm\s+-r|rm\s+-f|rm\s+-fr|rm\s+.*\/|rm|cp|mv|pkill|kill\s+-9|shutdown|reboot|format|dd|sudo|su)\b/i.test(lowerCommand)) {
                    return 'Perintah yang berpotensi merusak sistem diblokir.';
                }
                if (/\b(cat|tail|grep|find|ls)\s+(\/|~\/|\/etc|\/var|\/root|\.\.)/i.test(lowerCommand)) {
                    return 'Akses ke direktori di luar folder Anda diblokir.';
                }
                if (/\b(usermod|useradd|passwd|groupadd)\b/i.test(lowerCommand)) {
                    return 'Perintah modifikasi user diblokir.';
                }
                return false;
            }

            if (terminalForm) {
                terminalForm.addEventListener('submit', async (e) => {
                    e.preventDefault();
                    const command = terminalInput.value.trim();
                    if (command === '') return;

                    // Nonaktifkan input selama perintah dieksekusi
                    terminalInput.disabled = true;

                    const commandEcho = document.createElement('div');
                    commandEcho.innerHTML = `<span style="color: #28a745;">$></span> ${command}`;
                    terminalOutput.appendChild(commandEcho);
                    
                    terminalInput.value = '';

                    const securityError = isCommandDangerous(command);
                    if (securityError) {
                        const errorElement = document.createElement('pre');
                        errorElement.style.color = '#ffc107'; // Warna kuning/warning
                        terminalOutput.appendChild(errorElement);
                        // Tampilkan pesan blokir dengan efek ketik
                        typewriterEffect(errorElement, `[BLOCKED]: ${securityError}`, () => {
                            terminalInput.disabled = false; // Aktifkan lagi input
                            terminalInput.focus();
                        });
                        return;
                    }

                    try {
                        const response = await fetch('/admin/execute-command', { 
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({
                                command: command,
                                currentPath: shellCurrentPathInput.value
                            })
                        });

                        const data = await response.json();
                        const outputElement = document.createElement('pre');
                        outputElement.style.margin = '0';
                        
                        if (!response.ok) {
                            outputElement.style.color = '#dc3545'; // Warna merah untuk error
                            const errorMessage = `Error ${response.status}: ${data.output || data.message || 'Unknown Server Error'}`;
                            typewriterEffect(outputElement, errorMessage, () => {
                                terminalInput.disabled = false;
                                terminalInput.focus();
                            });
                        } else {
                            typewriterEffect(outputElement, data.output, () => {
                                terminalInput.disabled = false;
                                terminalInput.focus();
                            });
                        }
                        terminalOutput.appendChild(outputElement);

                    } catch (error) {
                        const errorElement = document.createElement('pre');
                        errorElement.style.color = '#dc3545';
                        const clientError = `Client/Network Error: ${error.message}`;
                        typewriterEffect(errorElement, clientError, () => {
                           terminalInput.disabled = false;
                           terminalInput.focus();
                        });
                        terminalOutput.appendChild(errorElement);
                    }
                });
            }
        });
    </script>
</body>
</html>
